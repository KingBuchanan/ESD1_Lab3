bool ramConfidenceTest(unsigned char *ramLocation_ptr,int numBytesToCheck){
			for(int a=0;a<3;a++){
				*inferred_Base_ptr+=1;
					inferred_Base_ptr++;
					read_value=*inferred_Base_ptr;
			}
			for (int a=3;a<0;a--){
				inferred_Base_ptr=a;
				if (read_value!=*inferred_Base_ptr){
				truth=false;
				}
				else(truth=true);
			}
return truth;
		 };


